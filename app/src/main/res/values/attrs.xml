<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StatsView">
        <attr name="fontSize" format="dimension|reference"/>
        <attr name="lineWidth" format="dimension|reference"/>
        <attr name="colors1" format="color|reference"/>
        <attr name="colors2" format="color|reference"/>
        <attr name="colors3" format="color|reference"/>
        <attr name="colors4" format="color|reference"/>
        <attr name="colorEmpty" format="color|reference"/>
        <attr name="animation" format="enum">
            <enum name="rotation" value="0"/>
            <enum name="sequential" value="1"/>
            <enum name="bidirectional" value="2"/>
        </attr>
    </declare-styleable>
</resources>