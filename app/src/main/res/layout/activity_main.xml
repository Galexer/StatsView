<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ru.netology.statsview.ui.StatsView
        android:id="@+id/stats"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        app:colors1="@android:color/holo_blue_bright"
        app:colors2="@android:color/holo_orange_dark"
        app:colors3="@android:color/holo_green_light"
        app:colors4="@android:color/holo_red_light"
        app:animation="bidirectional"
        app:colorEmpty="#808080"
        app:fontSize="50dp"
        app:lineWidth="20dp" />
</FrameLayout>